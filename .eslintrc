{
  "parser": "babel-eslint",
  "extends": "react",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": "warn",
    "indent": ["error", 2],
    "space-before-function-paren": 0,
    "no-use-before-define": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
